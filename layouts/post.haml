- render 'default' do
	%section{:id => 'content', :class => 'blog'}
		.blog-entry
			%aside
				.date
					.month= get_post_month(item)
					.day= get_post_day(item)
			.tagRibon
				- item[:tags].each do |tag|
					.tagBox
						.ar
						.co
							%a(href="/tags/#{tag}/")
								%span(class="name")= tag
			%article
				%h2(class='article-title')= item[:title]
				= find_and_preserve do
					= yield
